<h1>New Review for <%= link_to @movie.title, movie_path(@movie) %></h1>

<%= form_with(model: [@movie, @review], local: true) do | form | %>

  <%= render 'shared/errors', object: @review %>

  <%#= form.label :name %>
  <%#= form.text_field :name, autofocus: true %>

  <%= form.label :stars %>
  <%#= form.select :stars, Review::STARS, prompt: "Pick one" %>
  <% Review::STARS.each do | star | %>
    <span class="star">
      <%= form.radio_button :stars, star %>
      <%= label_tag star %>
    </span>
  <% end %>

  <%= form.label :comment %>
  <%= form.text_area :comment, placeholder: "What did you think?" %>

  <%= form.submit "Post Review" %>

<% end %>